<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>UCABEgresados</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/angel.css" rel="stylesheet">
    <link href="/css/simple-sidebar.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>


    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>


<body>
<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!      SIDE BAR                !!!!!!!!!!!!!!!!!!!!1!!!!!!!!!!!! -->
<div id="wrapper">

    <!-- Titulo en el sidebar -->
    <div id="sidebar-wrapper">

        <%include Partials/SideBar_Comision.ejs%>



    </div>
<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!      PAGE CONTENT               !!!!!!!!!!!!!!!!!!!!11 -->

    <div id="page-content-wrapper" class="main-background-light" >
        <div class="container-fluid full-height " >

            <!--==========TITULO Y ALERTAS====================-->
            <div class="row">
                <div class="col-lg-12">

                    <h1>Conformaci√≥n de Papeletas</h1>
                    <h1 class="subtitulo">Seleccione los candidatos para este cargo</h1>

                </div>
            </div>

            <!--==========PANEL====================-->
            <div class="row">
                <div class="col-lg-12">
                    <form action="/conformacion" method="post">


                        <div class="panel panel-default custom-panel">
                            <div class="panel-heading">
                                <p>Postulados <%=cargo.NombreCargo%></p>
                            </div>
                            <div class="panel-body">
                                <input type="hidden" name="cargo" value="<%=cargo.IDCargo%>">
                                <%if( lista != undefined){%>
                                    <% lista.forEach( function( Element ){ %>
                                    <div class="row">
                                        <div class="col-xs-11">
                                            <%=Element.NombreEgresado+" "+Element.ApellidoEgresado%>
                                        </div>
                                        <div class="col-sm-1">
                                            <% if ( Element.ValidadaCE == 1 ) { %>
                                                  <input type="checkbox" name="seleccionados[]" value="<%= Element.IDPostulacion %>" placeholder="First name" checked>
                                            <% } else { %>
                                                  <input type="checkbox" name="seleccionados[]" value="<%= Element.IDPostulacion %>" placeholder="First name">
                                            <%}%>
                                        </div>
                                    </div>
                                    <% });%>
                                <%}%>

                            </div>
                        </div>
                            <button type="submit" class="btn btn-primary center-block" >
                                Seleccionar Cargos
                            </button>


                    </form>
                </div>
            </div>


        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>






<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/js/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/js/bootstrap.min.js"></script>
</body>
</html>