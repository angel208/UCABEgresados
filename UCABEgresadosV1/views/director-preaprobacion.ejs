<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>UCABEgresados</title>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/angel.css" rel="stylesheet">
    <link href="/css/simple-sidebar.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>


    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>


<body>
<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!      SIDE BAR                !!!!!!!!!!!!!!!!!!!!1!!!!!!!!!!!! -->
<div id="wrapper">

    <!-- Titulo en el sidebar -->
    <div id="sidebar-wrapper">

        <%include Partials/SideBar_Director.ejs%>

    </div>
<!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!      PAGE CONTENT               !!!!!!!!!!!!!!!!!!!!11 -->

    <div id="page-content-wrapper" class="main-background-light" >
        <div class="container-fluid full-height " >

            <!--==========TITULO Y ALERTAS====================-->
            <div class="row">
                <div class="col-lg-12">

                    <h1>Aprobaci√≥n de Postulaciones</h1>
                    <h1 class="subtitulo">Seleccione el Cargo</h1>

                </div>
            </div>


            <!--==========BODY  ====================-->
            <div class="row">

                <% lista.forEach ( function( Element ){ %>
                    <a href="/aprobacion/<%=Element.IDCargo%>">
                        <button type="button" class="btn btn-primary btn-block">
                             <div class="col-xs-8 col-md-10 text-left"><%=Element.NombreCargo%></div>
                             <% aprobados.forEach( function(cargo){%>
                                 <%if ((cargo.IDCargo == Element.IDCargo) && (cargo.conformado > 0)){%>
                                     <img src="sources/check.png" class="col-xs-4 col-md-2 img-responsive pull-right" alt="progreso">
                             <%}});%>
                        </button>
                    </a>
                <%});%>


            </div>


        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>






<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/js/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
