                        <label for="pregunta">Pregunta de Seguridad (usada en caso de extravío de contraseña) </label>
                        <input type="text" class="form-control" id="pregunta" name="preg" placeholder="Pregunta Personal Seguridad ">
                    </div>
                    <div class="form-group">
                        <label for="respuesta">Respuesta de Seguridad </label>
                        <input type="text" class="form-control" id="respuesta" name="resp" placeholder="Respuesta">
                    </div>
<input type="hidden" name="CI" value="<%=CI%> ">

